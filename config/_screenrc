# 启动时不显示欢迎屏幕
startup_message off

# 定义screen的功能键为Ctrl-Z;向终端输入Ctrl-Z时应按 Ctrl-Zz
#escape z

# 屏幕缓冲区 1024行
defscrollback 1024

# 在最下一行显示窗口列表和时钟
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rY}%n %t%{-}%+w %=%{..G} %H(%l) %{..Y} %Y/%m/%d %c:%s "

# 关闭错误提示
vbell off

# 按Ctrl-Z w或Ctrl-Z Ctrl-W显示窗口列表
bind w windowlist -b
bind ^w windowlist -b

